@model blog.Models.customer
@{
    ViewData["Title"] = "profile";
    Layout = "~/Views/Shared/_mainlayout.cshtml";
}

<link href="~/css/profile.css" rel="stylesheet" />
<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color" style="margin-top:-100px">WELLCOM @Model.username</h3>
                   
                    <div class="row about-list">
                        <div class="col-md-6">
                            
                            <div class="media">
                                <label>Age</label>
                                <p>@Model.age Yr</p>
                            </div>
                            <div class="media">
                                <label>Residence</label>
                                <p>Egypt</p>
                            </div>
                            <div class="media">
                                <label>Address</label>
                                <p>@Model.adress</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>E-mail</label>
                                <p>@Model.email</p>
                            </div>
                            <div class="media">
                                <label>Password</label>
                                <p>@Model.password</p>
                            </div>
                            
                            <div class="media">
                                <label>Id</label>
                                <p>@Model.Id</p>
                            </div>
                        </div>
                        
                    </div>
                    
                </div>
            </div>
            
            <div class="col-lg-6">
                <div class="about-avatar">
                    <img style="height:500px;width:900px;padding:10px" src="/attaches/@Model.photo" class="small-img" alt="" />
                    
                </div>
            </div>

        </div>
      
        <div class="counter">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="500" data-speed="500">500</h6>
                        <p class="m-0px font-w-600">POSTS</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="150" data-speed="150">150</h6>
                        <p class="m-0px font-w-600"> UPDATES</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="850" data-speed="850">850</h6>
                        <p class="m-0px font-w-600">Photo Change</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="190" data-speed="190">190</h6>
                        <p class="m-0px font-w-600"> </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section></html>